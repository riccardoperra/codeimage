{
  "name": "codeimage",
  "version": "0.0.1",
  "description": "Create elegant code screenshots of your source code",
  "info": "Codeimage is the newest tool to help developers to create beautiful screenshots of their code, providing several features to speed up the process to post in social media, and for customize simple lines of code. Built on the top of solid-js and CodeMirror6 for solid-hack, has 30+ editor themes, custom themes, mobile devices and it's open source!",
  "homepage": "codeimage.dev",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/riccardoperra/codeimage"
  },
  "bugs": "https://github.com/riccardoperra/codeimage/issues",
  "license": "MIT",
  "keywords": [
    "solidhack",
    "solidjs",
    "best_app",
    "code",
    "editor",
    "screenshot",
    "elegant"
  ],
  "contributors": [
    {
      "name": "Riccardo Perra",
      "email": "riccardo.perra@icloud.com",
      "url": "https://riccardoperra.com"
    }
  ],
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged --relative",
    "pre-commit-prettier": "prettier --write",
    "pre-commit-eslint": "eslint --ext .js,.jsx,.mjs,.ts,.tsx -c .eslintrc.js --fix",
    "libs:build": "pnpm build:watch --filter ./packages",
    "app:dev": "pnpm dev --filter=@codeimage/app",
    "lint": "pnpm lint --filter='@codeimage/*'",
    "build:prod": "pnpm build --filter='@codeimage/*'",
    "changelog:gen": "ts-node scripts/changelog-generate.ts",
    "changelog:write": "ts-node scripts/changelog-write.ts",
    "changeset:commit": "git add CHANGELOG.md && git commit -am 'docs: add changelog' && git push"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.21.1",
    "@changesets/pre": "^1.0.10",
    "@changesets/read": "^0.5.4",
    "@changesets/config": "^1.7.0",
    "@changesets/assemble-release-plan": "^5.1.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@manypkg/get-packages": "^1.1.3",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-solid": "^0.4.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "lodash": "4.17.21",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14.x",
    "pnpm": ">=6.23.2"
  }
}
